<UserControl xmlns:Template="clr-namespace:VMR.Template"  x:Class="VMR.UC.UCchooseBeverage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VMR.UC"
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Please choose your order" FontSize="22" Margin="10 20" Foreground="DimGray"/>
        <WrapPanel Grid.Row="1" Orientation="Horizontal" >
            <Template:TPproduct x:Name="TPproduct"/>
        </WrapPanel>

    </Grid>
</UserControl>
